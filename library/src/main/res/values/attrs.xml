<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorTextView">
        <attr name="start_color" format="color"/>
        <attr name="end_color" format="color"/>
        <attr name="text" format="string"/>
        <attr name="text_size" format="dimension"/>
        <attr name="text_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="CornerButton">
        <attr name="corner_button_start_color" format="color"/>
        <attr name="corner_button_end_color" format="color"/>
        <attr name="corner_button_border_color" format="color"/>
        <attr name="corner_button_text_color" format="color"/>
        <attr name="corner_button_border_width" format="dimension"/>
        <attr name="corner_button_text" format="string"/>
        <attr name="corner_button_text_size" format="dimension"/>
        <attr name="corner_button_icon" format="reference"/>
        <attr name="corner_button_distance" format="dimension"/>
        <attr name="corner_button_padding_top" format="dimension"/>
        <attr name="corner_button_padding_bottom" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MenuView">
        <attr name="menu_view_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="menu_view_reverse" format="boolean"/>
        <attr name="menu_view_animation_duration" format="integer"/>
    </declare-styleable>
</resources>